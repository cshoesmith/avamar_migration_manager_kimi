# Avamar Migrator Configuration
# Copy this file to .env and fill in your values

# Flask Secret Key (generate a strong random key)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-strong-secret-key-here

# OAuth Client Credentials for Avamar API
AVAMAR_CLIENT_ID=AvamarMigrator
AVAMAR_CLIENT_SECRET=your-secure-client-secret-here

# SSL Verification (set to False only for testing with self-signed certificates)
# WARNING: Setting to False makes you vulnerable to MITM attacks
VERIFY_SSL=True

# Default Admin Password (only used on first database initialization)
# Change this after first login!
DEFAULT_ADMIN_PASSWORD=change-me-immediately
